<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <title>Quản lý Đơn hàng - 2FATE Motor</title>
    <link rel="stylesheet" href="/css/admin.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        .order-status-pending {
            background-color: #ffc107 !important;
        }

        .order-status-completed {
            background-color: #28a745 !important;
        }

        .order-status-cancelled {
            background-color: #dc3545 !important;
        }

        .payment-status-paid {
            color: #28a745;
        }

        .payment-status-pending {
            color: #ffc107;
        }

        .payment-status-expired {
            color: #dc3545;
        }
    </style>
</head>

<body>
    <%- include('../partials/header_admin') %>
        <div class="container-fluid">
            <div class="row">
                <%- include('../partials/sidebar_admin') %>

                    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 mt-4">
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <h1 class="text-primary"><i class="bi bi-receipt"></i> Quản lý Đơn hàng</h1>
                            <div>
                                <span class="badge bg-secondary fs-6">Tổng: <%= orders.length %> đơn</span>
                            </div>
                        </div>

                        <!-- Bộ lọc -->
                        <div class="card shadow-sm border-0 mb-3">
                            <div class="card-body">
                                <div class="row g-3">
                                    
                                    <div class="col-md-3">
                                        <select class="form-select" id="filterPayment">
                                            <option value="">Tất cả thanh toán</option>
                                            <option value="Đã thanh toán">Đã thanh toán</option>
                                            <option value="Đang thanh toán">Đang thanh toán</option>
                                            <option value="Hết hạn thanh toán">Hết hạn thanh toán</option>
                                        </select>
                                    </div>
                                    <div class="col-md-4">
                                        <input type="text" class="form-control" id="searchOrder"
                                            placeholder="Tìm theo ID đơn, tên khách...">
                                    </div>
                                    <div class="col-md-2">
                                        <button class="btn btn-primary w-100" onclick="applyFilter()">
                                            <i class="bi bi-funnel"></i> Lọc
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Bảng đơn hàng -->
                        <div class="card shadow-sm border-0">
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-hover align-middle">
                                        <thead class="table-light">
                                            <tr>
                                                <th width="5%">ID</th>
                                                <th width="15%">Khách hàng</th>
                                                <th width="15%">Liên hệ</th>
                                                <th width="12%">Tổng tiền</th>
                                                <th width="12%">Trạng thái</th>
                                                <th width="13%">Ngày đặt</th>
                                                <th width="18%">Hành động</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% if (orders.length> 0) { %>
                                                <% orders.forEach(o=> { %>
                                                    <tr data-status="<%= o.status %>"
                                                        data-payment="<%= o.payment_status %>">
                                                        <td><strong>#<%= o.id %></strong></td>
                                                        <td>
                                                            <div>
                                                                <i class="bi bi-person-circle"></i>
                                                                <strong>
                                                                    <%= o.username || 'N/A' %>
                                                                </strong>
                                                            </div>
                                                            <small class="text-muted">ID: <%= o.user_id %></small>
                                                        </td>
                                                        <td>
                                                            <div><i class="bi bi-telephone"></i>
                                                                <%= o.phone || 'Chưa có' %>
                                                            </div>
                                                            <small class="text-muted"><i class="bi bi-geo-alt"></i>
                                                                <%= (o.address || 'Chưa có' ).substring(0, 30) %>...
                                                            </small>
                                                        </td>
                                                        <td>
                                                            <strong class="text-danger">
                                                                <%= o.total_price.toLocaleString('vi-VN') %> ₫
                                                            </strong>
                                                        </td>
                                                        <td>
                                                            <% if (o.payment_status==='Đã thanh toán' ) { %>
                                                                <span class="badge bg-success"><i
                                                                        class="bi bi-check-circle"></i> Đã thanh
                                                                    toán</span>
                                                                <% } else if (o.payment_status==='Đang thanh toán' ) {
                                                                    %>
                                                                    <span class="badge bg-warning"><i
                                                                            class="bi bi-clock"></i> Đang xử lý</span>
                                                                    <% } else { %>
                                                                        <span class="badge bg-secondary">
                                                                            <%= o.payment_status %>
                                                                        </span>
                                                                        <% } %>
                                                        </td>
                                                        <td>
                                                            <%= new Date(o.created_at).toLocaleString('vi-VN') %>
                                                        </td>
                                                        <td>
                                                            <a href="/admin/orders/<%= o.id %>"
                                                                class="btn btn-sm btn-info text-white"
                                                                title="Xem chi tiết">
                                                                <i class="bi bi-eye"></i>
                                                            </a>
                                                            <button class="btn btn-sm btn-warning"
                                                                onclick="updateStatus('<%= o.id %>', '<%= o.status %>')"
                                                                title="Cập nhật trạng thái">
                                                                <i class="bi bi-pencil"></i>
                                                            </button>
                                                            <% if (o.status !=='cancelled' ) { %>
                                                                <button class="btn btn-sm btn-danger"
                                                                    onclick="cancelOrder('<%= o.id %>')" title="Hủy đơn">
                                                                    <i class="bi bi-x-circle"></i>
                                                                </button>
                                                                <% } %>
                                                        </td>
                                                    </tr>
                                                    <% }) %>
                                                        <% } else { %>
                                                            <tr>
                                                                <td colspan="8" class="text-center text-muted py-5">
                                                                    <i class="bi bi-inbox" style="font-size: 3rem;"></i>
                                                                    <p class="mt-3">Chưa có đơn hàng nào</p>
                                                                </td>
                                                            </tr>
                                                            <% } %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </main>
            </div>
        </div>

        <!-- Modal cập nhật trạng thái -->
        <div class="modal fade" id="statusModal" tabindex="-1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <form id="statusForm" method="POST">
                        <div class="modal-header bg-warning">
                            <h5 class="modal-title"><i class="bi bi-pencil"></i> Cập nhật trạng thái đơn hàng</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </div>
                        <div class="modal-body">
                            <input type="hidden" name="orderId" id="statusOrderId">
                            <div class="mb-3">
                                <label class="form-label">Trạng thái mới</label>
                                <select name="status" id="newStatus" class="form-select" required>
                                    <option value="pending">Đang xử lý</option>
                                    <option value="completed">Hoàn thành</option>
                                    <option value="cancelled">Đã hủy</option>
                                </select>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                            <button type="submit" class="btn btn-warning">Cập nhật</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
        <script>
            // Cập nhật trạng thái đơn hàng
            function updateStatus(orderId, currentStatus) {
                document.getElementById('statusOrderId').value = orderId;
                document.getElementById('newStatus').value = currentStatus;
                new bootstrap.Modal(document.getElementById('statusModal')).show();
            }

            document.getElementById('statusForm').addEventListener('submit', function (e) {
                e.preventDefault();
                const orderId = document.getElementById('statusOrderId').value;
                const status = document.getElementById('newStatus').value;

                fetch(`/admin/orders/update-status/${orderId}`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ status })
                })
                    .then(res => res.json())
                    .then(data => {
                        if (data.success) {
                            alert('Cập nhật trạng thái thành công!');
                            location.reload();
                        } else {
                            alert('Lỗi: ' + data.message);
                        }
                    })
                    .catch(err => alert('Lỗi kết nối: ' + err));
            });

            // Hủy đơn hàng
            function cancelOrder(orderId) {
                if (confirm('⚠️ Bạn có chắc muốn HỦY đơn hàng #' + orderId + '?')) {
                    fetch(`/admin/orders/cancel/${orderId}`, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' }
                    })
                        .then(res => res.json())
                        .then(data => {
                            if (data.success) {
                                alert('Đơn hàng đã được hủy!');
                                location.reload();
                            } else {
                                alert('Lỗi: ' + data.message);
                            }
                        })
                        .catch(err => alert('Lỗi: ' + err));
                }
            }

            // Áp dụng bộ lọc
            function applyFilter() {
                const status = document.getElementById('filterStatus').value;
                const payment = document.getElementById('filterPayment').value;
                const search = document.getElementById('searchOrder').value.toLowerCase();

                const rows = document.querySelectorAll('tbody tr[data-status]');
                rows.forEach(row => {
                    const rowStatus = row.getAttribute('data-status');
                    const rowPayment = row.getAttribute('data-payment');
                    const rowText = row.textContent.toLowerCase();

                    let show = true;
                    if (status && rowStatus !== status) show = false;
                    if (payment && rowPayment !== payment) show = false;
                    if (search && !rowText.includes(search)) show = false;

                    row.style.display = show ? '' : 'none';
                });
            }

            // Lọc realtime khi nhập tìm kiếm
            document.getElementById('searchOrder').addEventListener('input', applyFilter);
            document.getElementById('filterStatus').addEventListener('change', applyFilter);
            document.getElementById('filterPayment').addEventListener('change', applyFilter);
        </script>

        <script>
            // ✅ Tự động cập nhật trạng thái đơn hàng hết hạn sau 15 phút
            (function () {
                const orders = document.querySelectorAll('tbody tr[data-status]');

                orders.forEach(row => {
                    const paymentStatus = row.getAttribute('data-payment');
                    if (paymentStatus !== 'Đang thanh toán') return;

                    // Lấy thời gian tạo đơn từ cột "Ngày đặt"
                    const dateCells = row.querySelectorAll('td');
                    const dateCell = dateCells[5]; // Cột thứ 6 là "Ngày đặt"

                    if (!dateCell) return;

                    const dateText = dateCell.textContent.trim();
                    // Parse: "15:47:29 19/11/2025"
                    const matches = dateText.match(/(\d{2}):(\d{2}):(\d{2})\s+(\d{2})\/(\d{2})\/(\d{4})/);
                    if (!matches) return;

                    const [_, hours, minutes, seconds, day, month, year] = matches;
                    const createdAt = new Date(year, month - 1, day, hours, minutes, seconds);

                    // Tính thời gian hết hạn (15 phút)
                    const expireTime = new Date(createdAt.getTime() + 15 * 60 * 1000);
                    const now = new Date();
                    const remainingMs = expireTime - now;

                    if (remainingMs <= 0) {
                        // Đã hết hạn rồi
                        updateToExpired(row);
                    } else {
                        // Đặt timeout
                        setTimeout(() => {
                            updateToExpired(row);
                        }, remainingMs);

                        console.log(`Đơn hàng sẽ hết hạn sau ${Math.ceil(remainingMs / 60000)} phút`);
                    }
                });

                function updateToExpired(row) {
                    const badge = row.querySelector('.badge');
                    if (badge) {
                        badge.className = 'badge bg-danger';
                        badge.innerHTML = '<i class="bi bi-x-circle"></i> Hết hạn thanh toán';
                    }
                    row.setAttribute('data-payment', 'Hết hạn thanh toán');

                    console.log('✅ Đã cập nhật trạng thái hết hạn');
                }
            })();
        </script>
</body>

</html>