<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chi tiết phiếu nhập - 2FATE Motor</title>

    <!-- Đồng bộ với admin dashboard -->
    <link rel="stylesheet" href="/css/admin.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/css_admin/import_receipt_detail.css">
</head>

<body>

    <%- include('../partials/header_admin') %>

        <div class="container-fluid">
            <div class="row">

                <%- include('../partials/sidebar_admin') %>

                    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 mt-4">

                        <!-- Title + Buttons -->
                        <div class="d-flex justify-content-between align-items-center mb-4 no-print">
                            <h1 class="text-primary"><i class="bi bi-file-earmark-text"></i> Chi tiết phiếu nhập</h1>

                            <div class="btn-group">
                                <a href="/admin/import-receipts" class="btn btn-secondary shadow-sm">
                                    <i class="bi bi-arrow-left"></i> Quay lại
                                </a>
                                <button onclick="window.print()" class="btn btn-primary shadow-sm">
                                    <i class="bi bi-printer"></i> In phiếu
                                </button>
                            </div>
                        </div>

                        <!-- Receipt Header -->
                        <div class="receipt-header">
                            <div class="receipt-code">
                                <i class="bi bi-file-earmark-text"></i>
                                <%= receipt.receipt_code %>
                            </div>

                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <i class="bi bi-calendar3 text-primary"></i>
                                    Ngày nhập:
                                    <%= new Date(receipt.import_date).toLocaleString('vi-VN') %>
                                </div>

                                <div>
                                    <% if (receipt.status==='completed' ) { %>
                                        <span class="badge bg-success" style="font-size: 1rem; padding: 10px 20px;">
                                            <i class="bi bi-check-circle"></i> Đã hoàn thành
                                        </span>
                                        <% } else if (receipt.status==='draft' ) { %>
                                            <span class="badge bg-warning" style="font-size: 1rem; padding: 10px 20px;">
                                                <i class="bi bi-clock"></i> Nháp
                                            </span>
                                            <% } else { %>
                                                <span class="badge bg-danger"
                                                    style="font-size: 1rem; padding: 10px 20px;">
                                                    <i class="bi bi-x-circle"></i> Đã hủy
                                                </span>
                                                <% } %>
                                </div>
                            </div>
                        </div>

                        <!-- Receipt Info -->
                        <div class="info-card">
                            <h5 class="mb-4">
                                <i class="bi bi-info-circle text-primary"></i> Thông tin phiếu nhập
                            </h5>

                            <div class="info-grid">
                                <div class="info-item">
                                    <div class="info-icon"><i class="bi bi-building"></i></div>
                                    <div>
                                        <div class="info-label">Kho nhập</div>
                                        <div class="info-value">
                                            <%= receipt.warehouse_name %>
                                        </div>
                                    </div>
                                </div>

                                <div class="info-item">
                                    <div class="info-icon"><i class="bi bi-truck"></i></div>
                                    <div>
                                        <div class="info-label">Nhà cung cấp</div>
                                        <div class="info-value">
                                            <%= receipt.supplier_name || 'Không có' %>
                                        </div>
                                    </div>
                                </div>

                                <div class="info-item">
                                    <div class="info-icon"><i class="bi bi-telephone"></i></div>
                                    <div>
                                        <div class="info-label">SĐT nhà cung cấp</div>
                                        <div class="info-value">
                                            <%= receipt.supplier_phone || 'Không có' %>
                                        </div>
                                    </div>
                                </div>

                                <div class="info-item">
                                    <div class="info-icon"><i class="bi bi-person-badge"></i></div>
                                    <div>
                                        <div class="info-label">Người tạo</div>
                                        <div class="info-value">
                                            <%= receipt.created_by_name %>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <% if (receipt.notes) { %>
                                <div class="mt-4 pt-3 border-top">
                                    <strong><i class="bi bi-sticky text-primary"></i> Ghi chú:</strong>
                                    <p class="mb-0 mt-2">
                                        <%= receipt.notes %>
                                    </p>
                                </div>
                                <% } %>
                        </div>

                        <!-- Items Table -->
                        <div class="items-table">
                            <div class="table-header">
                                <h5 class="mb-0"><i class="bi bi-box-seam text-primary"></i> Danh sách sản phẩm nhập
                                </h5>
                            </div>

                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th width="50">STT</th>
                                        <th width="80">Ảnh</th>
                                        <th>Tên sản phẩm</th>
                                        <th width="120">Số lượng</th>
                                        <th width="180">Đơn giá</th>
                                        <th width="180">Thành tiền</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    <% let totalQuantity=0; %>

                                        <% items.forEach((item, index)=> { %>
                                            <% totalQuantity +=item.quantity; %>

                                                <tr>
                                                    <td>
                                                        <%= index + 1 %>
                                                    </td>

                                                    <td>
                                                        <img src="<%= item.image %>" alt="<%= item.name %>"
                                                            class="product-img">
                                                    </td>

                                                    <td>
                                                        <strong>
                                                            <%= item.name %>
                                                        </strong>
                                                        <% if (item.notes) { %>
                                                            <br>
                                                            <small class="text-muted">
                                                                <i class="bi bi-sticky"></i>
                                                                <%= item.notes %>
                                                            </small>
                                                            <% } %>
                                                    </td>

                                                    <td>
                                                        <strong class="text-primary" style="font-size: 1.2rem;">
                                                            <%= item.quantity %>
                                                        </strong>
                                                    </td>

                                                    <td>
                                                        <%= new Intl.NumberFormat('vi-VN').format(item.unit_price) %> ₫
                                                    </td>

                                                    <td>
                                                        <strong class="text-success">
                                                            <%= new Intl.NumberFormat('vi-VN').format(item.total_price)
                                                                %> ₫
                                                        </strong>
                                                    </td>
                                                </tr>

                                                <% }) %>
                                </tbody>

                                <tfoot class="table-light">
                                    <tr>
                                        <td colspan="3" class="text-end"><strong>Tổng cộng:</strong></td>
                                        <td>
                                            <strong style="font-size: 1.3rem; color: #0d6efd;">
                                                <%= totalQuantity %>
                                            </strong>
                                        </td>
                                        <td colspan="2"></td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>

                        <!-- Total Amount -->
                        <div class="total-box">
                            <h5>Tổng giá trị phiếu nhập</h5>
                            <div class="total-value">
                                <%= new Intl.NumberFormat('vi-VN').format(receipt.total_amount) %> ₫
                            </div>
                        </div>

                    </main>
            </div>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>

</html>