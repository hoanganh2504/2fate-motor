<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tạo phiếu nhập kho - 2FATE Motor</title>

    <!-- Đồng bộ với admin dashboard -->
    <link rel="stylesheet" href="/css/admin.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/css_admin/import_receipt_new.css">
</head>

<body>
    <%- include('../partials/header_admin') %>

        <div class="container-fluid">
            <div class="row">

                <%- include('../partials/sidebar_admin') %>

                    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 mt-4">

                        <!-- HEADER ACTION -->
                        <div class="d-flex justify-content-between align-items-center mb-4 no-print">
                            <h1 class="text-primary">
                                <i class="bi bi-plus-circle"></i> Tạo phiếu nhập kho
                            </h1>

                            <a href="/admin/import-receipts" class="btn btn-secondary shadow-sm">
                                <i class="bi bi-arrow-left"></i> Quay lại
                            </a>
                        </div>

                        <!-- FORM -->
                        <form id="importReceiptForm">

                            <!-- INFO CARD -->
                            <div class="info-card">
                                <h5 class="mb-4"><i class="bi bi-info-circle text-primary"></i> Thông tin cơ bản</h5>

                                <div class="info-grid">

                                    <div class="info-item">
                                        <div class="info-icon"><i class="bi bi-building"></i></div>
                                        <div style="flex: 1;">
                                            <div class="info-label">Kho nhập <span class="text-danger">*</span></div>
                                            <select class="form-select" name="warehouse_id" required>
                                                <option value="">-- Chọn kho --</option>
                                                <% warehouses.forEach(w=> { %>
                                                    <option value="<%= w.id %>">
                                                        <%= w.name %>
                                                    </option>
                                                    <% }) %>
                                            </select>
                                        </div>
                                    </div>

                                    <div class="info-item">
                                        <div class="info-icon"><i class="bi bi-truck"></i></div>
                                        <div style="flex: 1;">
                                            <div class="info-label">Nhà cung cấp</div>
                                            <input type="text" class="form-control" name="supplier_name">
                                        </div>
                                    </div>

                                    <div class="info-item">
                                        <div class="info-icon"><i class="bi bi-telephone"></i></div>
                                        <div style="flex: 1;">
                                            <div class="info-label">SĐT nhà cung cấp</div>
                                            <input type="tel" class="form-control" name="supplier_phone">
                                        </div>
                                    </div>

                                    <div class="info-item">
                                        <div class="info-icon"><i class="bi bi-sticky"></i></div>
                                        <div style="flex: 1;">
                                            <div class="info-label">Ghi chú</div>
                                            <textarea class="form-control" name="notes" rows="1"></textarea>
                                        </div>
                                    </div>

                                </div>
                            </div>

                            <!-- PRODUCT LIST -->
                            <div class="items-table">
                                <div class="table-header">
                                    <h5 class="mb-0"><i class="bi bi-box-seam text-primary"></i> Danh sách sản phẩm</h5>

                                    <button type="button" class="btn btn-success shadow-sm" onclick="addProductRow()">
                                        <i class="bi bi-plus-circle"></i> Thêm sản phẩm
                                    </button>
                                </div>

                                <div id="productsContainer"></div>
                            </div>

                            <!-- TOTAL -->
                            <div class="total-box">
                                <h5>Tổng giá trị phiếu nhập</h5>
                                <div class="total-value" id="totalAmount">0 ₫</div>
                            </div>

                            <div class="text-center">
                                <button type="submit" class="btn btn-primary btn-lg px-5 shadow-sm">
                                    <i class="bi bi-check-circle"></i> Tạo phiếu nhập
                                </button>
                            </div>
                        </form>

                        <script id="productsData" type="application/json">
                    <%- JSON.stringify(products) %>
                </script>

                    </main>
            </div>
        </div>

        <!-- SCRIPT -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

        <script>
            var products = JSON.parse(document.getElementById('productsData').textContent);
            var productCounter = 0;

            function formatMoney(v) {
                return new Intl.NumberFormat('vi-VN').format(v);
            }

            function addProductRow() {
                productCounter++;

                let options = products.map(p =>
                    `<option value="${p.id}" data-price="${p.price}">
                    ${p.name} - ${formatMoney(p.price)} ₫
                </option>`
                ).join('');

                let html = `
                <div class="product-item" id="product-${productCounter}">
                    <button type="button" class="remove-btn" onclick="removeProduct(${productCounter})">
                        <i class="bi bi-x"></i>
                    </button>

                    <div class="row g-3">

                        <div class="col-md-5">
                            <label class="form-label">Sản phẩm</label>
                            <select class="form-select product-select" required onchange="updatePrice(this)">
                                <option value="">-- Chọn sản phẩm --</option>
                                ${options}
                            </select>
                        </div>

                        <div class="col-md-2">
                            <label class="form-label">Số lượng</label>
                            <input type="number" class="form-control quantity-input" min="1" value="1" onchange="calculateTotal()">
                        </div>

                        <div class="col-md-3">
                            <label class="form-label">Đơn giá (₫)</label>
                            <input type="number" class="form-control price-input" min="0" onchange="calculateTotal()">
                        </div>

                        <div class="col-md-2">
                            <label class="form-label">Thành tiền</label>
                            <input type="text" class="form-control total-input" readonly style="background: #f8f9fa;">
                        </div>
                    </div>
                </div>
            `;

                document.getElementById("productsContainer").insertAdjacentHTML("beforeend", html);
            }

            function removeProduct(id) {
                document.getElementById("product-" + id).remove();
                calculateTotal();
            }

            function updatePrice(select) {
                let price = select.options[select.selectedIndex].dataset.price || 0;
                select.closest(".product-item").querySelector(".price-input").value = price;
                calculateTotal();
            }

            function calculateTotal() {
                let total = 0;

                document.querySelectorAll(".product-item").forEach(item => {
                    let qty = Number(item.querySelector(".quantity-input").value || 0);
                    let price = Number(item.querySelector(".price-input").value || 0);

                    let sum = qty * price;

                    item.querySelector(".total-input").value = formatMoney(sum) + " ₫";
                    total += sum;
                });

                document.getElementById("totalAmount").textContent = formatMoney(total) + " ₫";
            }

            document.getElementById("importReceiptForm").addEventListener("submit", function (e) {
                e.preventDefault();

                let formData = new FormData(this);
                let items = [];

                document.querySelectorAll(".product-item").forEach(item => {
                    let pid = item.querySelector(".product-select").value;
                    let qty = item.querySelector(".quantity-input").value;
                    let price = item.querySelector(".price-input").value;

                    if (pid && qty && price) {
                        items.push({
                            product_id: Number(pid),
                            quantity: Number(qty),
                            unit_price: Number(price)
                        });
                    }
                });

                if (items.length === 0) return alert("⚠️ Vui lòng thêm ít nhất 1 sản phẩm!");

                fetch('/admin/import-receipts/create', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        warehouse_id: Number(formData.get("warehouse_id")),
                        supplier_name: formData.get("supplier_name"),
                        supplier_phone: formData.get("supplier_phone"),
                        notes: formData.get("notes"),
                        items
                    })
                })
                    .then(r => r.json())
                    .then(res => {
                        if (res.success) {
                            alert("✅ Tạo phiếu nhập thành công!");
                            window.location.href = "/admin/import-receipts/" + res.receiptId;
                        } else {
                            alert("❌ " + res.message);
                        }
                    })
                    .catch(err => {
                        alert("❌ Lỗi kết nối!");
                        console.error(err);
                    });
            });

            addProductRow();
        </script>

</body>

</html>