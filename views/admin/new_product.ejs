<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8" />
    <title>Thêm mới Sản phẩm - Bike Store</title>
    <link rel="stylesheet" href="/css/admin.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet" />
</head>

<body>
    <%- include('../partials/header_admin') %>
        <div class="container-fluid">
            <div class="row">
                <%- include('../partials/sidebar_admin') %>
                    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 mt-4">
                        <h1 class="mb-4 text-primary">
                            <i class="bi bi-plus-circle"></i> Thêm mới Sản phẩm
                        </h1>

                        <div class="card shadow-sm border-0 mb-4">
                            <div class="card-body">
                                <form action="/admin/products/new" method="POST" enctype="multipart/form-data">

                                    <!-- Thông tin cơ bản -->
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="mb-3">
                                                <label for="name" class="form-label">
                                                    Tên sản phẩm <span class="text-danger">*</span>
                                                </label>
                                                <input type="text" class="form-control" id="name" name="name"
                                                    placeholder="VD: AirBlade 160cc Bản đen" required />
                                            </div>
                                        </div>

                                        <div class="col-md-6">
                                            <div class="mb-3">
                                                <label for="price" class="form-label">
                                                    Giá (VNĐ) <span class="text-danger">*</span>
                                                </label>
                                                <input type="number" class="form-control" id="price" name="price"
                                                    placeholder="45000000" required />
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Phân loại xe -->
                                    <div class="row">
                                        <div class="col-md-4">
                                            <div class="mb-3">
                                                <label for="type" class="form-label">
                                                    Loại xe <span class="text-danger">*</span>
                                                </label>
                                                <select class="form-select" id="type" name="type" required>
                                                    <option value="">-- Chọn loại xe --</option>
                                                    <% types.forEach(t=> { %>
                                                        <option value="<%= t.name %>">
                                                            <%= t.name %>
                                                        </option>
                                                        <% }); %>
                                                </select>
                                            </div>
                                        </div>

                                        <div class="col-md-4">
                                            <div class="mb-3">
                                                <label for="cc" class="form-label">
                                                    Phân khối <span class="text-danger">*</span>
                                                </label>
                                                <select class="form-select" id="cc" name="cc" required>
                                                    <option value="">-- Chọn phân khối --</option>
                                                    <% ccs.forEach(c=> { %>
                                                        <option value="<%= c.name %>">
                                                            <%= c.name %>
                                                        </option>
                                                        <% }); %>
                                                </select>
                                            </div>
                                        </div>

                                        <div class="col-md-4">
                                            <div class="mb-3">
                                                <label for="color" class="form-label">
                                                    Màu sắc <span class="text-danger">*</span>
                                                </label>
                                                <select class="form-select" id="color" name="color" required>
                                                    <option value="">-- Chọn màu --</option>
                                                    <% colors.forEach(c=> { %>
                                                        <option value="<%= c.name %>">
                                                            <%= c.name %>
                                                        </option>
                                                        <% }); %>
                                                </select>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Số lượng và trạng thái -->
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="mb-3">
                                                <label for="stock" class="form-label">
                                                    Số lượng tồn kho
                                                </label>
                                                <input type="number" class="form-control" id="stock" name="stock"
                                                    value="0" min="0" />
                                                <small class="text-muted">Để 0 nếu quản lý qua hệ thống kho</small>
                                            </div>
                                        </div>

                                        <div class="col-md-6">
                                            <div class="mb-3">
                                                <label for="status" class="form-label">
                                                    Trạng thái <span class="text-danger">*</span>
                                                </label>
                                                <select class="form-select" id="status" name="status" required>
                                                    <option value="active">Đang bán</option>
                                                    <option value="inactive">Ngừng bán</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Mô tả -->
                                    <div class="mb-3">
                                        <label for="description" class="form-label">Mô tả sản phẩm</label>
                                        <textarea class="form-control" id="description" name="description" rows="4"
                                            placeholder="Nhập mô tả chi tiết về sản phẩm..."></textarea>
                                    </div>

                                    <!-- Hình ảnh -->
                                    <div class="mb-3">
                                        <label for="image" class="form-label">
                                            Hình ảnh <span class="text-danger">*</span>
                                        </label>
                                        <input type="file" class="form-control" id="image" name="image" accept="image/*"
                                            required />
                                        <small class="text-muted">Chọn file ảnh (JPG, PNG, GIF)</small>
                                    </div>

                                    <!-- Buttons -->
                                    <div class="mt-4">
                                        <button type="submit" class="btn btn-primary">
                                            <i class="bi bi-plus-lg"></i> Thêm mới
                                        </button>
                                        <a href="/admin/products" class="btn btn-secondary ms-2">
                                            <i class="bi bi-arrow-left"></i> Quay lại danh sách
                                        </a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </main>
            </div>
        </div>
        <%- include('../partials/footer_admin') %>

            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>