                        }

                        // C·∫≠p nh·∫≠t data-payment attribute
                        orderCard.setAttribute('data-payment', 'H·∫øt h·∫°n thanh to√°n');

                        // G·ªçi API ƒë·ªÉ c·∫≠p nh·∫≠t database
                        fetch(`/api/orders/${orderId}/expire`, {
