                (function () {
                    const orders = document.querySelectorAll('.order-card[data-payment="ƒêang thanh to√°n"]');

                    orders.forEach(order => {
                        // L·∫•y ID ƒë∆°n h√†ng
                        const orderIdText = order.querySelector('.order-header strong').textContent;
                        const orderId = orderIdText.replace('ƒê∆°n h√†ng #', '').trim();

                        // L·∫•y th·ªùi gian t·∫°o ƒë∆°n
                        const dateSpan = order.querySelector('.order-header .text-muted');
                        if (!dateSpan) return;

                        const dateText = dateSpan.textContent.trim();
                        // Parse date t·ª´ format: "üìÖ 15:47:29 19/11/2025"
                        const matches = dateText.match(/(\d{2}):(\d{2}):(\d{2})\s+(\d{2})\/(\d{2})\/(\d{4})/);
                        if (!matches) return;

                        const [_, hours, minutes, seconds, day, month, year] = matches;
                        const createdAt = new Date(year, month - 1, day, hours, minutes, seconds);

                        // T√≠nh th·ªùi gian h·∫øt h·∫°n (15 ph√∫t sau khi t·∫°o)
                        const expireTime = new Date(createdAt.getTime() + 15 * 60 * 1000);
                        const now = new Date();

                        // T√≠nh th·ªùi gian c√≤n l·∫°i (milliseconds)
                        const remainingMs = expireTime - now;

                        if (remainingMs <= 0) {
                            // ƒê√£ h·∫øt h·∫°n r·ªìi, c·∫≠p nh·∫≠t ngay
                            updateOrderToExpired(order, orderId);
                        } else {
                            // ƒê·∫∑t timeout ƒë·ªÉ c·∫≠p nh·∫≠t khi h·∫øt h·∫°n
                            setTimeout(() => {
                                updateOrderToExpired(order, orderId);
                            }, remainingMs);

                            console.log(`ƒê∆°n h√†ng #${orderId} s·∫Ω h·∫øt h·∫°n sau ${Math.ceil(remainingMs / 60000)} ph√∫t`);
                        }
                    });

                    function updateOrderToExpired(orderCard, orderId) {
                        // C·∫≠p nh·∫≠t badge tr·∫°ng th√°i trong UI
                        const badge = orderCard.querySelector('.status-badge');
