                    darkText: "Enable Dark Mode",
                    notifLabel: "üîî Notifications",
                    emailText: "Receive Email Notifications",
                    promoText: "Receive Promotional Offers",
                    saveBtn: "Save Changes",
                    backHome: "‚¨Ö Back to Home",
                    saved: "‚úÖ Settings saved!"
                }
            };

            let currentLang = localStorage.getItem("lang") || "vi";

            function applyLanguage() {
                const t = translations[currentLang];
                for (let key in t) {
                    const el = document.getElementById(key);
                    if (el) el.textContent = t[key];
                }
            }

            function applyTheme() {
                const darkMode = localStorage.getItem("darkMode") === "true";
                document.body.classList.remove("dark-mode", "light-mode");
                document.body.classList.add(darkMode ? "dark-mode" : "light-mode");
                document.getElementById("darkModeToggle").checked = darkMode;
            }

            function saveSettings() {
                const lang = document.getElementById('language').value;
                const darkMode = document.getElementById('darkModeToggle').checked;

                localStorage.setItem('lang', lang);
                localStorage.setItem('darkMode', darkMode);

                currentLang = lang;
                applyLanguage();
                applyTheme();

                alert(translations[currentLang].saved);
                setTimeout(() => location.reload(), 500);
            }

            window.addEventListener("load", () => {
                document.getElementById("language").value = currentLang;
                applyLanguage();
                applyTheme();
            });
        </script>
